DB_HOST=localhost
DB_PORT=5432
DB_NAME=queryquest
DB_USER=queryquest
DB_PASSWORD=queryquest_pass
PORT=3001

# Frontend URL for email links
FRONTEND_URL=http://localhost:5173

# CORS (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:5173

# Firebase Admin SDK service account file path
FIREBASE_SERVICE_ACCOUNT_PATH=C:\\path\\to\\firebase-service-account.json

# Alternative for cloud platforms (Render/Railway):
# Option A: full JSON in one variable
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"..."}
# Option B: split fields
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project-id.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"

# SMTP settings (for verification/reset emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_user
SMTP_PASS=your_password
MAIL_FROM="QueryQuest <no-reply@queryquest.com>"
