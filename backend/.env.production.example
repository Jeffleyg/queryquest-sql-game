# QueryQuest Production Environment (Backend)
# Copy this file to .env and fill in your production values

# PostgreSQL Database
DB_HOST=your-postgresql-host.com
DB_PORT=5432
DB_NAME=queryquest_prod
DB_USER=queryquest_user
DB_PASSWORD=your-secure-password-here

# Server
PORT=3001

# Frontend URL (from Firebase Hosting)
FRONTEND_URL=https://querygame-b48a7.web.app

# CORS Origins (comma-separated)
CORS_ORIGIN=https://querygame-b48a7.web.app

# Firebase Admin SDK
# Download service account JSON from Firebase Console → Project Settings → Service Accounts
# Option A (local file path):
# FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/firebase-service-account.json

# Option B (recommended on Render/Railway):
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"..."}

# Option C (split fields):
# FIREBASE_PROJECT_ID=querygame-b48a7
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@querygame-b48a7.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"

# SMTP (for email verification and password reset)
# Example: Gmail App Password or SendGrid
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
MAIL_FROM="QueryQuest <noreply@queryquest.com>"

# Optional: Analytics/Monitoring
# LOG_LEVEL=info
# SENTRY_DSN=https://...
